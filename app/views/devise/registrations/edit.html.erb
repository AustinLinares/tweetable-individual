<header class="header">
  <h1 class="heading">Edit User</h1>
</header>

<section class="form__container center-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>

    <div class="field mv-1">
      <%= f.label :username %><br />
      <%= f.text_field :username, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class:"input" %>
    </div>

    <div class="field mv-1">
      <%= f.label :avatar , "Avatar"%><br />
      <%= f.file_field :avatar, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field mv-1">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
    </div>

    <div class="actions mv-1 center-button">
      <%= f.submit "Submit", class:"submit-button" %>
    </div>
  <% end %>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"cancel-account" %>
</section>
