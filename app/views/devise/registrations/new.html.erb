<header class="header">
  <h1 class="heading">Sign up</h1>
</header>
<section class="form__container center-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>

    <div class="field mv-1">
      <%= f.label :username %><br />
      <%= f.text_field :username, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, class:"input" %>
    </div>

    <div class="field  mv-1">
      <%= f.label :avatar , "Avatar"%><br />
      <%= f.file_field :avatar, class:"input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field mv-1">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="actions center-button" data-turbo="false">
      <%= f.submit "Sign up", class:"signup-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>